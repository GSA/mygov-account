!!! 5
%html(lang="en")
  %head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")
    %meta(charset="utf-8")

    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    %meta{:name => "viewport", :content => "width=device-width"}
    - if current_user && request.get? # If it's a post, then no redirect
      = refresh_meta_tag_conent
    %meta{:name => "format-detection", :content => "telephone=yes"}
    %meta(name="apple-mobile-web-app-capable" content="yes")

    %meta(name="HandheldFriendly" content="True")
    %meta(http-equiv="cleartype" content="on")

    %meta(property="fb:app_id"               content="MyUSA")
    %meta(property="og:type"                 content="website")
    %meta(property="og:url"                  content="http://my.usa.gov/")
    %meta(property="og:image"                content="http://my.usa.gov/assets/apple-touch-icon-114x114-precomposed.png")
    %meta(property="og:title"                content="MyUSA")
    %meta(property="og:description"          content="A platform for connecting people and government")

    %meta(name="apple-mobile-web-app-title" content="MyUSA")

    %title= content_for?(:title) ? yield(:title) : "MyUSA"
    = csrf_meta_tags

    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "dashboard", :media => "all"

    /[if !IE 7]

    /[if lt IE 9]
      = stylesheet_link_tag "general_foundicons_ie7", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag 'modernizr'

  %body
    #header
      %nav{:class=>'navbar-wrapper navbar-default navbar-fixed-top', :role=>'navigation'}
        .navbar-inner
          .container
            .navbar-header.col-md-6

              %button{"type"=>"button","class"=>"navbar-toggle","data-toggle"=>"collapse", "data-target"=>".navbar-ex1-collapse"}
                %span.sr-only
                  Toggle navigation
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar

              %a{:href => root_url, :class => 'navbar-brand'}
                %h1
                  My<span>USA</span>

            - if current_user

              .collapse.navbar-collapse.navbar-ex1-collapse
                = render_navigation

            #sign-in-utility.col-md-6
              - if !current_user && request.path != sign_in_path
                =t('sign_in_prompt')
                =link_to t('sign_in_link'), sign_in_path, class: 'btn btn-default'
    #main
      %a{:name => "top"}
      .nav-container
        .row
          .col-md-12
      .container
        = session_timeout_message
        = yield

        .row
          .col-md-1
          .col-md-11
            - if current_user
              = render :partial => 'home/administrative_settings'
            - else
              = render :partial => 'home/footer_links'

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = content_for :scripts
    = render :partial => "shared/ab", :locals => { :segment => @segment }
    = analytics_init if Rails.env.production?
