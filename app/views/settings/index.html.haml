.row
  .col-md-2
    =render 'home/settings_nav'

  .col-md-10
    %h2
      - if @user.profile.name
        = "Settings for #{@user.profile.name}"
      - else
        My Settings
    %p
      - if flash.notice
        .alert-box.blue
          = flash.notice
      %ul
        %li
          = link_to 'Other networks', authentications_path
        %li
          = link_to 'Change email address', edit_user_registration_path
        %li
          = link_to "Change your password", edit_password_user_path
