- if resource && !resource.errors.blank?
  - content_for :scripts do
    = javascript_tag do
      $('html,body').animate({scrollTop: $('.alert').offset().top},'slow');

.row
  .col-md-12
    - if flash.alert
      .alert.alert-danger
        = flash.alert
    - unless resource.errors.empty?
      .alert.alert-danger
        = devise_error_messages!
    %h3
      Sign up

.row
  .col-md-8
    %p
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {novalidate: true}) do |f|
        %ol.inline.sign-in-panel
          %li.row
            .col-md-2
              = f.label :first_name
            .col-md-6
              = f.text_field :first_name
          %li.row
            .col-md-2
              = f.label :last_name
            .col-md-6
              = f.text_field :last_name
          %li.row
            .col-md-2
              = f.label :email
            .col-md-6
              = f.email_field :email
          %li.row
            .col-md-2
              = f.label :password
            .col-md-6
              = f.password_field :password, autocomplete: 'off'
          %li.row
            .col-md-2
              = f.label :password_confirmation
            .col-md-6
              = f.password_field :password_confirmation, autocomplete: 'off'
          %li.row
            .col-md-2
            .col-md-6
              = f.label :terms_of_service do
                = f.check_box :terms_of_service
                I agree to the MyUSA #{link_to 'Terms of Service', terms_of_service_path} and #{link_to 'Privacy Policy', privacy_policy_path}
          %li.row
            .col-md-2
            .col-md-6
              = recaptcha_tags display: {theme: 'clean'}
          %li.row
            .col-md-2
            .col-md-6
              = f.submit 'Sign up', :class => 'btn btn-primary btn-lg'

  .col-md-4
    = render "devise/shared/provider_links"
