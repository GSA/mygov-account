- if @beta_signup && !@beta_signup.errors.blank?
  - content_for :scripts do
    = javascript_tag do
      $('html,body').animate({scrollTop: $('.alert').offset().top},'slow');
.row
  .col-md-10.text-center
    %h2
      = t(:take_control)

.signup-form.margin-top
  .row
    .col-md-6.text-center
      %h3
        Try it out
      #signup-form
        #fieldset
          = form_for @beta_signup, html: {novalidate: true} do |form|
            = flash_messages
            = form.label :email
            = form.email_field :email
            = form.submit t(:sign_up), :class => 'large button positive '

      %p.disclaimer
        %a.plain{:href => "http://myusa.tumblr.com/about"}= t(:read_more)
