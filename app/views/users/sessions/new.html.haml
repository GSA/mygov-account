.col-md-12
  %h2
    = t(:sign_in)
  = flash_messages
  = devise_error_messages!

.row
  .col-md-7
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {novalidate: true}) do |f|

      %fieldset.plain
        %ol.inline.sign-in-panel
          %li.row
            .col-md-2
              = f.label :email
            .col-md-2
              = f.email_field :email
          %li.no-margin.row
            .col-md-2
              = f.label :password
            .col-md-2
              = f.password_field :password, autocomplete: 'off'
          - if devise_mapping.rememberable?
            %li.row
              .col-md-2
              .col-md-6
                = f.check_box :remember_me
                = f.label :remember_me

                - if devise_mapping.recoverable? && controller_name != 'passwords'
                  %br
                  = link_to t(:forgot_your_password), new_password_path(resource_name)


                .actions
                  = f.submit t(:sign_in), :class=>'btn btn-primary'
                  - if devise_mapping.registerable? && controller_name != 'registrations'
                    or
                    %strong
                      = link_to "Sign up for a new account", new_registration_path(resource_name)

  = render 'shared/signup_options'

