!!! 5
%html(lang="en")
  %head(prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#")
    = yield :head
    - if current_user && request.get? # If it's a post, then no redirect
      = refresh_meta_tag_conent

    = head_metadata(content_for?(:title) ? yield(:title) : "MyUSA", content_for?(:meta_description) ? yield(:meta_description) : "A platform for connecting people and government")

    = csrf_meta_tags

    = stylesheet_link_tag "bootstrap", :media => "all"
    = stylesheet_link_tag "dashboard", :media => "all"
    = stylesheet_link_tag "signup", :media => "all"
    = stylesheet_link_tag "forms", :media => "all"

    %link{:href=>'https://fonts.googleapis.com/css?family=Raleway: 100, 200, 300,400,500,700', :rel=>'stylesheet', :type=>'text/css'}
    /[if !IE 7]
      = stylesheet_link_tag "ie7", :media => "all"

  %body.content
    #navigation-region
      .container
        .row
          %nav.navbar.col-md-6.navbar-default{role: "navigation"}
            / Brand and toggle get grouped for better mobile display
            .navbar-header
              %a{:class=>"navbar-brand", :href=>"/"}
                %img{:src => "/assets/shield.gif"}
                %h1
                  <span>My</span>USA

          - if current_user
            .collapse.navbar-collapse.navbar-ex1-collapse
              = render_navigation(:context => :main)

          #sign-in-utility.col-md-5.text-right
            - if !current_user && request.path != sign_in_path
              =t('sign_in_prompt')
              =link_to t('sign_in_link'), sign_in_path, class: 'btn btn-primary'

          .col-md-1

    #main
      %a{:name => "top"}
      .nav-container
        .row
          .col-md-12
      .container
        = session_timeout_message
        = yield

        .row
          .col-md-1
          .col-md-11
            - if current_user
              = render :partial => 'home/administrative_settings'
            - else
              = render :partial => 'home/footer_links'

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = content_for :scripts
    = render :partial => "shared/ab", :locals => { :segment => @segment }
    = analytics_init if Rails.env.production?
