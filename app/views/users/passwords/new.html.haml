.row
  .twelve.columns
    %h2 
      Forgot your password?
  .eight.columns
    .panel
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, novalidate: true }) do |f|
        = devise_error_messages!
        = flash_messages
        %fieldset.plain
          %ol
            %li
              = f.label :email
            %li
              = f.email_field :email
          %div.actions= f.submit "Email password reset instructions", :class => 'large button positive', :accesskey => access_keys[:submit]
  
  .four.columns
    .panel.side-panel
      = render "devise/shared/links"
