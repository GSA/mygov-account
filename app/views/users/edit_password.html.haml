.row
  .col-md-2
    %h5
      Settings

    %ul.nav.nav-pills.nav-stacked
    = render_navigation(:context => :settings)

  .col-md-8
    %h2
      = t(:change_your_password)

    - if @user.errors.any?
      .alert.alert-danger
        = error_messages_for(@user)

    %p
      Create a new password for
      %strong
        = @user.email

    - if flash.notice
      .alert.alert-info
        = flash.notice

    = form_for(@user, :url => { :action => "update_password" } ) do |f|


      %div
        = f.label :current_password
        %br
        = f.password_field :current_password, autocomplete: 'off'
        %br
        = f.label :current_password, t(:new_password)
        %br
        = f.password_field :password, autocomplete: 'off'
        %br
        = f.label :password_confirmation, t(:confirm_new_password)
        %br
        = f.password_field :password_confirmation, autocomplete: 'off'

      %div
        = f.submit t(:change_my_password), class: 'btn btn-primary form-button', :accesskey => access_keys[:submit]
        = link_to 'Cancel', account_index_path
